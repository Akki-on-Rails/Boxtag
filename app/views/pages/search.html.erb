<div class="container">
  <%# what is the path for thee form_tag??? %>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find collections, boxes or items"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <% if @results.present? %>
    <p>Results: <%= @results.size %></p>
    <% @results.each do |result| %>
      <h3><%= result.searchable.name %></h3>
      <p><%= result.searchable.description %></p>
    <% end %>
  <% elsif @results.empty? %>
    <p>No results found. Please try something else</p>
  <% else %>
    <p>Please enter something.</p>
  <% end %>
</div>
